{
  "name": "dietrich",
  "version": "1.0.0",
  "description": "ðŸ”‘ My Dietrich",
  "scripts": {
    "fix": "standard bin/server '**/*.js' --fix --verbose | snazzy",
    "lint": "standard bin/server '**/*.js' --verbose | snazzy",
    "local": "API_TOKEN=123 BASIC_AUTH='user:pass' PORT=8080 nodemon --exec ./bin/server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "./bin/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlenkeit/dietrich.git"
  },
  "keywords": [],
  "author": "Maximilian Lenkeit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlenkeit/dietrich/issues"
  },
  "homepage": "https://github.com/mlenkeit/dietrich#readme",
  "devDependencies": {
    "@commitlint/cli": "7.3.1",
    "@commitlint/config-conventional": "7.3.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.9",
    "snazzy": "8.0.0",
    "standard": "12.0.1"
  },
  "engines": {
    "node": ">=9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ],
    "bin/server": [
      "standard --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "express": "4.16.4",
    "express-api-token-auth": "1.0.0",
    "express-basic-auth": "1.1.6",
    "express-ws": "4.0.0",
    "uuid": "3.3.2",
    "yargs": "12.0.5"
  }
}
